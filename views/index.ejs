<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Main page</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->
</head>
<body>
<div class="container">
    <div class="col-md-8"></div>
    <div class="col-md-4">
        <div class="row">
            <p>Login or Register with:</p>
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div>
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-warning">Login</button>
                <a href="/signup">Signup</a>
            </form>
        </div>
        <hr>
        <div class="row">
            <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span></a>
            <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span></a>
            <a href="/auth/github" class="btn btn-default"><span class="fa fa-github"></span></a>
        </div>
    </div>

</div>
</body>
</html>